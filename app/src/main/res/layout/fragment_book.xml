<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Book"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="-16dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SESSION DATE:"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="16dp"
                android:textSize="12sp"
                android:fontFamily="@font/prodbold"
                android:textColor="#000"
                android:id="@+id/ses"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="64sp"
                android:fontFamily="@font/prodreg"
                android:textColor="#6699cc"
                android:layout_below="@id/ses"
                android:id="@+id/no"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="thu"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/prodreg"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/no"
                    android:layout_below="@id/ses"
                    android:id="@+id/thu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCTOBER"
                    android:layout_marginLeft="16dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/prodreg"

                    android:layout_toRightOf="@id/no"
                    android:layout_below="@id/thu"
                    android:id="@+id/oct"

                />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/thu"
                    android:layout_marginRight="16dp"
                    android:id="@+id/ri"
                    android:layout_marginTop="-4dp"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/left"
                    android:layout_toLeftOf="@id/ri"
                    android:layout_below="@id/thu"
                    android:layout_marginTop="-4dp"

                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SESSION TIME:"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/prodbold"
                    android:textColor="#000"
                    android:id="@+id/ses1"
                    android:layout_below="@id/no"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ses1"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:id="@+id/recycler">
                </androidx.recyclerview.widget.RecyclerView>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="74dp"
                    android:layout_below="@id/ses1"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/transp2"

                    />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="74dp"
                    android:layout_below="@id/ses1"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/transp1"
                    android:layout_alignParentRight="true"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg"
                    android:layout_below="@id/recycler"
                    android:id="@+id/buttonm"
                    android:text="BOOK SEATS"
                    android:fontFamily="@font/prodreg"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="24dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>